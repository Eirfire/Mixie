{
  "name": "mixie",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "packages/email/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "clean:all": "turbo run clean:all && rm -rf node_modules/ && rm -rf .turbo",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.4",
    "@turbo/gen": "^1.13.4",
    "dotenv-cli": "^7.4.2",
    "turbo": "2.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@vercel/speed-insights",
    "core-js-pure"
  ],
  "packageManager": "bun@1.1.17"
}
